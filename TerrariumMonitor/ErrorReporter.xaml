<UserControl x:Class="TerrariumMonitor.ErrorReporter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TerrariumMonitor"
             mc:Ignorable="d" 
             Height="Auto"
             Width="Auto">
    <Grid>
        <Button x:Name="bttn_ShowConfig" 
                Content="Show Config" 
                HorizontalAlignment="Right" 
                Margin="225,278,5,5" 
                VerticalAlignment="Top" 
                Width="75"
                Height="22"
                Style="{DynamicResource Bttn_Flt}"/>
        
        <TextBlock x:Name="tB_ErrorReport" 
                   HorizontalAlignment="Left" 
                   TextWrapping="Wrap" 
                   Text="Error: Invalid XAML." 
                   VerticalAlignment="Top" 
                   Height="Auto" 
                   Width="Auto" 
                   Foreground="#FFC3C3C3"
                   Margin="5,0,5,5"/>

    </Grid>
</UserControl>
